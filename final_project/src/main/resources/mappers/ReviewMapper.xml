<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.puter.final_project.dao.ReviewMapper">

  <!-- 전체조회 -->
  <select id="selectList" resultType="review">
       select * from ReviewView order by rvIdx
  </select>

  <select id="getReviewInfo" parameterType="int" resultType="review">
    SELECT * FROM ReviewView WHERE rvIdx = #{rvIdx} order by rvDate
  </select>

  <!-- 리뷰 작성 -->
  <insert id="insertReview" parameterType="review">
  INSERT INTO review
    VALUES (
      null, 
      #{pIdx}, 
      #{userIdx}, 
      #{rvContent}, 
      5, 
      null,
      default
    )
  </insert>

  <!-- 리뷰 수정 -->
  <update id="updateReview" parameterType="review">
    UPDATE review
    SET 
      rvContent = #{rvContent}, 
      reviewPoint = 5, 
      rvImg = #{rvImg}
    WHERE 
      rvIdx = #{rvIdx}
  </update>

  <!-- 리뷰 삭제 -->
  <delete id="deleteReview" parameterType="int">
    DELETE FROM review
    WHERE rvIdx = #{rvIdx}
  </delete>

  <!-- 특정 상품에 리뷰 조회 -->
  <select id="selectReviewsByProduct" parameterType="int" resultType="review">
    SELECT * 
    FROM ReviewView
    WHERE pIdx = #{pIdx}
</select>

</mapper>
