<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="review">

  <!-- 리뷰 목록 조회 -->
  <select id="getAllReviews" resultType="review">
    SELECT 
      rvIdx, pIdx, userIdx, rvContent, reviewPoint, rvImg
    FROM 
      reviews
    ORDER BY 
      rvIdx DESC
  </select>

  <!-- 특정 리뷰 조회 -->
  <select id="getReviewByIdx" parameterType="int" resultType="review">
    SELECT 
      rvIdx, pIdx, userIdx, rvContent, reviewPoint, rvImg
    FROM 
      reviews
    WHERE 
      rvIdx = #{rvIdx}
  </select>

  <!-- 리뷰 작성 -->
  <insert id="insertReview" parameterType="review">
  INSERT INTO reviews
    VALUES (
      #{rvIdx}, 
      #{pIdx}, 
      #{userIdx}, 
      #{rvContent}, 
      #{reviewPoint}, 
      #{rvImg}
    )
  </insert>

  <!-- 리뷰 수정 -->
  <update id="updateReview" parameterType="review">
    UPDATE reviews
    SET 
      rvContent = #{rvContent}, 
      reviewPoint = #{reviewPoint}, 
      rvImg = #{rvImg}
    WHERE 
      rvIdx = #{rvIdx}
  </update>

  <!-- 리뷰 삭제 -->
  <delete id="deleteReview" parameterType="int">
    DELETE FROM reviews 
    WHERE rvIdx = #{rvIdx}
  </delete>

</mapper>
